<section id="home" class="pt-16 relative overflow-hidden">
  <!-- Gradient Background with Wavy Design -->
  <div class="absolute inset-0 bg-gradient-to-br from-[#2d4a7c] via-[#5a4f9c] to-[#7a5da3]">
    <!-- Red Accent Top Right -->
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-gradient-to-bl from-[#e63946] to-transparent opacity-60"></div>
    
    <!-- Wavy Bottom Shape -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 320" class="w-full h-auto" preserveAspectRatio="none">
        <path 
          fill="#ffffff" 
          fill-opacity="1" 
          d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,101.3C1248,85,1344,75,1392,69.3L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path>
      </svg>
    </div>

    <!-- Chemical Formula Decorative Elements -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-20 left-1/4 text-white/30 text-sm">C₂H₅OH</div>
      <div class="absolute top-32 right-1/3 text-white/30 text-sm">H₂O</div>
      <div class="absolute top-40 left-1/2 text-white/30 text-sm">C₂H₅OH</div>
      <div class="absolute bottom-1/3 right-1/4 text-white/30 text-sm">H₂O</div>
      <!-- Hexagon molecular structures -->
      <svg class="absolute top-24 right-1/4 w-16 h-16 opacity-30" viewBox="0 0 100 100">
        <polygon points="50,5 90,30 90,70 50,95 10,70 10,30" fill="none" stroke="white" stroke-width="2"/>
        <circle cx="50" cy="5" r="3" fill="white"/>
        <circle cx="90" cy="30" r="3" fill="white"/>
        <circle cx="90" cy="70" r="3" fill="white"/>
        <circle cx="50" cy="95" r="3" fill="white"/>
        <circle cx="10" cy="70" r="3" fill="white"/>
        <circle cx="10" cy="30" r="3" fill="white"/>
      </svg>
    </div>
  </div>

  <div class="max-w-7xl mx-auto relative z-10">
    <div class="min-h-[calc(100vh-4rem)] flex items-center justify-center text-center px-4 sm:px-6 lg:px-8 py-16">
      <div class="w-full max-w-4xl">
        <h1 class="text-white mb-6 text-5xl md:text-6xl lg:text-7xl font-serif">
          Innovative Solutions<br />for a Sustainable Future
        </h1>
        
        <p class="text-white/90 mb-12 text-lg md:text-xl max-w-2xl mx-auto">
          Exploring innovative solutions for sustainable technology and industrial automation.
        </p>
        
        <div class="flex flex-wrap gap-4 justify-center mb-12">
          <a href="#services" class="px-6 py-3 bg-[#1e3a5f] hover:bg-[#2d4a7c] text-white rounded-md transition-colors inline-flex items-center gap-2">
            Explore Services
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="#contact" class="px-6 py-3 border border-white text-white rounded-md hover:bg-white/10 transition-colors">
            Get in Touch
          </a>
        </div>

        <!-- Statistics -->
        <div class="grid grid-cols-3 gap-8 pt-8 border-t border-white/30">
          <div>
            <div class="flex items-center justify-center gap-2 mb-2">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
            </div>
            <div class="text-white mb-1 text-xl font-semibold">15+ Years</div>
            <div class="text-sm text-white/80">Experience</div>
          </div>
          <div>
            <div class="flex items-center justify-center gap-2 mb-2">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="text-white mb-1 text-xl font-semibold">200+</div>
            <div class="text-sm text-white/80">Projects</div>
          </div>
          <div>
            <div class="flex items-center justify-center gap-2 mb-2">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <div class="text-white mb-1 text-xl font-semibold">98%</div>
            <div class="text-sm text-white/80">Satisfaction</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

