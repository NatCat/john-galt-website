---
const defaultContact = {
  info: [
    {
      icon: 'MapPin',
      text: 'Moscow Region, Russia',
    },
    {
      icon: 'Phone',
      text: '+7 (XXX) XXX-XX-XX',
    },
    {
      icon: 'Mail',
      text: 'info@rtc-automation.com',
    },
  ],
};

const contactInfo = (Astro.props.contact?.info ?? []).flatMap((item) =>
  item.lines.map((line) => ({ icon: item.icon, text: line })),
);

const displayedContact = contactInfo.length > 0 ? contactInfo : defaultContact.info;

const iconPaths: Record<string, string> = {
  MapPin: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
  Phone: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
  Mail: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
};

const serviceNames = (Astro.props.services ?? []).map((service) => service.title).slice(0, 4);
const defaultServices = ['Industrial Automation', 'Welding Services', 'Software Development', 'Component Sourcing'];
const footerServices = serviceNames.length > 0 ? serviceNames : defaultServices;
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Company Info -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <img src="/logo.png" alt="John Galt" class="h-10 w-auto" onerror="this.style.display='none'" />
        </div>
        <p class="text-sm text-gray-400 mb-4">
          Leading provider of industrial automation solutions for the food processing industry.
        </p>
        <div class="flex items-center gap-2 text-sm text-gray-400">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          <span>John Galt Group</span>
        </div>
        <div class="mt-4">
          <a href="/admin/" class="text-sm text-[#7a5da3] hover:text-white transition-colors">Admin Login</a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white mb-4 font-semibold">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="#home" class="hover:text-[#7a5da3] transition-colors">Home</a>
          </li>
          <li>
            <a href="#about" class="hover:text-[#7a5da3] transition-colors">About</a>
          </li>
          <li>
            <a href="#services" class="hover:text-[#7a5da3] transition-colors">Solutions</a>
          </li>
          <li>
            <a href="#portfolio" class="hover:text-[#7a5da3] transition-colors">Portfolio</a>
          </li>
          <li>
            <a href="#equipment" class="hover:text-[#7a5da3] transition-colors">Equipment</a>
          </li>
          <li>
            <a href="#representatives" class="hover:text-[#7a5da3] transition-colors">Representatives</a>
          </li>
          <li>
            <a href="#papers" class="hover:text-[#7a5da3] transition-colors">Papers</a>
          </li>
          <li>
            <a href="#support" class="hover:text-[#7a5da3] transition-colors">Support</a>
          </li>
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-white mb-4 font-semibold">Our Services</h3>
        <ul class="space-y-2 text-sm">
          {footerServices.map((service) => (
            <li class="hover:text-[#7a5da3] transition-colors cursor-pointer">{service}</li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white mb-4 font-semibold">Contact Info</h3>
        <ul class="space-y-3 text-sm">
          {displayedContact.map((item, index) => {
            const path = iconPaths[item.icon] ?? iconPaths.MapPin;
            return (
              <li class="flex items-start gap-2">
                <svg class="w-4 h-4 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={path}></path>
                </svg>
                <span>{item.text}</span>
              </li>
            );
          })}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-400">
        <p>&copy; {new Date().getFullYear()} John Galt. All rights reserved.</p>
        <div class="flex gap-6">
          <a href="#" class="hover:text-[#7a5da3] transition-colors">Privacy Policy</a>
          <a href="#" class="hover:text-[#7a5da3] transition-colors">Terms of Service</a>
          <a href="#" class="hover:text-[#7a5da3] transition-colors">Sitemap</a>
        </div>
      </div>
    </div>
  </div>
</footer>

