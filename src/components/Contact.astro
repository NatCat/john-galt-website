---
const defaultContact = {
  tag: 'Contact Us',
  heading: "Let's Discuss Your Project",
  description:
    'Get in touch with our team to explore how we can help automate and optimize your industrial processes.',
  info: [
    {
      icon: 'Phone',
      title: 'Phone',
      lines: ['+7 (XXX) XXX-XX-XX', 'Mon-Fri 9:00-18:00'],
    },
    {
      icon: 'Mail',
      title: 'Email',
      lines: ['info@rtc-automation.com', 'support@rtc-automation.com'],
    },
    {
      icon: 'MapPin',
      title: 'Location',
      lines: ['Industrial District', 'Moscow Region, Russia'],
    },
  ],
  submitLabel: 'Send Message',
};

const iconPaths: Record<string, string> = {
  Phone: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
  Mail: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  MapPin: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
};

const incoming = Astro.props.data ?? {};
const contact = {
  ...defaultContact,
  ...incoming,
  info: incoming.info && incoming.info.length > 0 ? incoming.info : defaultContact.info,
};
---

<section id="contact" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      {contact.tag && (
        <div class="inline-block px-4 py-2 bg-[#2d4a7c]/10 text-[#2d4a7c] rounded-full mb-4">
          {contact.tag}
        </div>
      )}
      <h2 class="text-gray-900 mb-4 text-3xl md:text-4xl font-serif">
        {contact.heading}
      </h2>
      {contact.description && <p class="text-gray-600">{contact.description}</p>}
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Contact Information -->
      <div class="space-y-6">
        {contact.info.map((item) => {
          const path = iconPaths[item.icon] ?? iconPaths[defaultContact.info[0].icon];
          return (
            <div class="rounded-xl border p-6">
              <div class="flex items-start gap-4">
                <div class="bg-[#2d4a7c]/10 p-3 rounded-lg">
                  <svg class="text-[#2d4a7c] w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={path}></path>
                  </svg>
                </div>
                <div>
                  <div class="text-gray-900 mb-1 font-semibold">{item.title}</div>
                  {item.lines.map((line) => (
                    <div class="text-sm text-gray-600">{line}</div>
                  ))}
                </div>
              </div>
            </div>
          );
        })}
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-2">
        <div class="rounded-xl border p-8">
          <form id="contact-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm text-gray-700 mb-2">
                  Full Name *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder="John Smith"
                  class="w-full h-9 rounded-md border border-gray-300 px-3 py-1 text-base focus:outline-none focus:ring-2 focus:ring-[#2d4a7c] focus:border-transparent"
                />
              </div>
              <div>
                <label for="email" class="block text-sm text-gray-700 mb-2">
                  Email Address *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="john@company.com"
                  class="w-full h-9 rounded-md border border-gray-300 px-3 py-1 text-base focus:outline-none focus:ring-2 focus:ring-[#2d4a7c] focus:border-transparent"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="phone" class="block text-sm text-gray-700 mb-2">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  placeholder="+7 (XXX) XXX-XX-XX"
                  class="w-full h-9 rounded-md border border-gray-300 px-3 py-1 text-base focus:outline-none focus:ring-2 focus:ring-[#2d4a7c] focus:border-transparent"
                />
              </div>
              <div>
                <label for="company" class="block text-sm text-gray-700 mb-2">
                  Company Name
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  placeholder="Your Company"
                  class="w-full h-9 rounded-md border border-gray-300 px-3 py-1 text-base focus:outline-none focus:ring-2 focus:ring-[#2d4a7c] focus:border-transparent"
                />
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm text-gray-700 mb-2">
                Project Details *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="6"
                placeholder="Tell us about your project requirements..."
                class="w-full min-h-16 rounded-md border border-gray-300 px-3 py-2 text-base resize-none focus:outline-none focus:ring-2 focus:ring-[#2d4a7c] focus:border-transparent"
              ></textarea>
            </div>

            <button type="submit" class="w-full px-6 py-3 bg-[#2d4a7c] text-white rounded-md hover:bg-[#1e3a5f] transition-colors inline-flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              {contact.submitLabel ?? defaultContact.submitLabel}
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.getElementById('contact-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Thank you for your inquiry! We\'ll contact you soon.');
    (e.target as HTMLFormElement).reset();
  });
</script>

