---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/tailwind.css';
import { getLocaleFromUrl } from '../../lib/i18n';
import type { Locale } from '../../lib/translations';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: Awaited<ReturnType<typeof getCollection<'posts'>>>[number];
}

const { post } = Astro.props;
const locale = getLocaleFromUrl(Astro.url);
const { Content } = await post.render();
---

<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={post.data.description} />
    <title>{post.data.title} - John Galt</title>
  </head>
  <body class="min-h-screen bg-white">
    <Header locale={locale} />
    <main class="pt-20">
      <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {post.data.image && (
          <div class="mb-8">
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-96 object-cover rounded-lg"
            />
          </div>
        )}
        
        <header class="mb-8">
          <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString(locale, {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            {post.data.author && (
              <>
                <span>â€¢</span>
                <span>By {post.data.author}</span>
              </>
            )}
          </div>
          
          <h1 class="text-4xl md:text-5xl font-serif text-gray-900 mb-4">
            {post.data.title}
          </h1>
          
          {post.data.description && (
            <p class="text-xl text-gray-600 mb-6">{post.data.description}</p>
          )}
          
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="px-3 py-1 bg-[#2d4a7c]/10 text-[#2d4a7c] rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>
        
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
        
        <div class="mt-12 pt-8 border-t">
          <a
            href="/"
            class="text-[#2d4a7c] hover:text-[#1e3a5f] inline-flex items-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Home
          </a>
        </div>
      </article>
    </main>
    <Footer locale={locale} />
  </body>
</html>

<style>
  .prose {
    color: #374151;
  }
  .prose h2 {
    color: #111827;
    font-size: 1.875rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose h3 {
    color: #111827;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.625rem;
  }
  .prose li {
    margin-bottom: 0.5rem;
  }
  .prose a {
    color: #2d4a7c;
    text-decoration: underline;
  }
  .prose a:hover {
    color: #1e3a5f;
  }
  .prose code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  .prose pre {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }
  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }
</style>

