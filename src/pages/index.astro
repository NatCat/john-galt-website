---
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Portfolio from "../components/Portfolio.astro";
import About from "../components/About.astro";
import News from "../components/News.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
import { getEntryBySlug } from "astro:content";

const homeEntry = await getEntryBySlug('pages', 'home');
const homeData = homeEntry?.data ?? {};
const metaDescription = homeData.description ?? 'John Galt - Innovative solutions for sustainable technology and industrial automation';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metaDescription} />
    <title>{homeData.title ?? 'John Galt - Industrial Automation Solutions'}</title>
  </head>
  <body class="min-h-screen bg-white">
    <Header />
    <main>
      <Hero data={homeData.hero} />
      <Services intro={homeData.servicesIntro} items={homeData.services} />
      <Portfolio intro={homeData.portfolioIntro} projects={homeData.portfolio} />
      <About data={homeData.about} />
      <News />
      <Contact data={homeData.contact} />
    </main>
    <Footer contact={homeData.contact} services={homeData.services} />
  </body>
</html>
